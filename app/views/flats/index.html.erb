<h1>All of our flats (<%= Flat.count %>)</h1>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card p-3">
        <h4><%= flat.name %></h4>
        <p><%= flat.address %></p>
        <div>
          <i class="fas fa-users"></i>
          <p class="d-inline-block"><%= flat.number_of_guests %></p>
          <i class="fas fa-euro-sign"></i>
          <p class="d-inline-block"><%= flat.price_per_night %></p>
        </div>
        <div>
          <%= link_to "More info", flat_path(flat), class: "d-inline-block text-primary" %>
          <%= link_to "Edit flat", edit_flat_path(flat), class: "d-inline-block text-warning" %>
          <%= link_to "Delete flat", flat_path(flat), class: "d-inline-block text-danger", method: :delete, data: { confirm: "Are you sure you want to delete this flat?"} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
